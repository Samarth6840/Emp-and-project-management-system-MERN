<!DOCTYPE html>
<html lang="en">
<head>
    <title>Manage Employees</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Manage Employees</h1>
        <div class="breadcrumb">
            <a href="/admin/dashboard">Dashboard</a> > <span>Employees</span>
        </div>
        
        <div class="action-bar">
            <a href="/admin/employees/add" class="btn btn-primary">+ Add Employee</a>
            <a href="/admin/dashboard" class="btn btn-secondary">Back to Dashboard</a>
        </div>
        
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% employees.forEach(emp => { %>
                    <tr>
                        <td><%= emp.name %></td>
                        <td><%= emp.email %></td>
                        <td>
                            <a href="/admin/employees/edit/<%= emp._id %>" class="btn btn-edit">Edit</a>
                            <a href="/admin/employees/delete/<%= emp._id %>" class="btn btn-delete" onclick="return confirm('Delete this employee?')">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>
