<h1>Edit Employee</h1>
<form method="POST">
    <input type="text" name="name" value="<%= employee.name %>" required><br>
    <input type="email" name="email" value="<%= employee.email %>" required><br>
    <input type="password" name="password" placeholder="New Password (leave blank to keep old)"><br>
    <input type="number" name="salary" value="<%= employee.salary %>" required><br>
    <input type="date" name="dob" value="<%= employee.dob %>" required><br>
    <input type="text" name="address" value="<%= employee.address %>" required><br>
    <input type="tel" name="phone" value="<%= employee.phone %>" required><br>
    
    <button type="submit">Update Employee</button>

</form>
